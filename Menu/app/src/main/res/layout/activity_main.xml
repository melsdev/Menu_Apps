<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <include layout="@layout/image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <!-- FrameLayout para mostrar fragmentos -->
    <FrameLayout
        android:id="@+id/frm_home"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <!-- BottomNavigationView para el menÃº -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:menu="@menu/menu_navigation"/>

</androidx.appcompat.widget.LinearLayoutCompat>